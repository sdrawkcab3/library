<div class="mx-auto" style="width: 400px">
<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <% form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control", placeholder: :title %>
  </div>

  <div class="field form-group">
    <% form.label :author, style: "display: block" %>
    <%= form.text_field :author, class: "form-control", placeholder: :author %>
  </div>

  <div class="field form-group">
    <% form.label :cover_text, style: "display: block" %>
    <%= form.text_field :cover_text, class: "form-control", placeholder: :cover_text %>
  </div>

  <div class="field form-group">
    <% form.label :short_description, style: "display: block" %>
    <%= form.text_field :short_description, class: "form-control", placeholder: :short_description %>
  </div>

  <div class="field form-group">
    <% form.label :cost, style: "display: block" %>
    <%= form.text_field :cost, class: "form-control", placeholder: :cost %>
  </div>

  <div class="field form-group">
    <% form.label :ISBN, style: "display: block" %>
    <%= form.text_field :ISBN, class: "form-control", placeholder: "ISBN 10 or 13" %>
  </div>

  <div>
    <%= form.submit class: 'btn btn-outline-primary', :name => 'commit' %>
  </div>
<% end %>
</div>