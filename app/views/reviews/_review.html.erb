<div class="col mb-3">
  <div id="<%= dom_id review %>" class="card shadow">
    <h5 class="card-header"><% review.stars.times do |star| %><i class="fa fa-star"></i><% end %></h5>
    <div class="card-body">
      <h5 class="card-title"><%= review.title %></h5>
      <p class="card-text"><%= review.body %></p>
    </div>
    <div class="card-footer text-end">
      <% if review.user.name.nil? %>
        <%= "Anonymous" %> 
      <% else %>
        <%= review.user.name %> 
      <% end %>
      <em class="text-muted" style="font-size:0.8em;"><%= review.user.created_at.strftime("%b %d %Y") %></em>
    </div>
  </div>
</div>
