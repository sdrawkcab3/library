<% if current_user %>
<ul class = "navbar-nav">
  <li class="nav-item dropdown">       
    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
    <%= current_user.name %>
    </a>
    <ul class="dropdown-menu dropdown-menu-lg-end animate slideIn">
      <%= link_to "Profile", edit_user_registration_path, class: "dropdown-item" %>
      <% #if current_user.loans > 1 %>
        <li><a class="dropdown-item" href="#">Books I'm Borrowing</a></li>
      <% #end %>
      <li><a class="dropdown-item" href="#">History</a></li>
      <li><a class="dropdown-item" href="#">Reviews</a></li>
      <li><hr class="dropdown-divider"></li>
      <% if current_user.admin == true %>
        <li><a class="dropdown-item" href="#">Add book</a></li>
        <li><a class="dropdown-item" href="#">View currently borrowed</a></li>
        <li><a class="dropdown-item" href="#">Notify overdue borrowers</a></li>
        <li><hr class="dropdown-divider"></li>
      <% end %>
      <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
    </ul>
  </li>
</ul>
<% else %>
  <ul class="navbar-nav">
    <li class="nav-item">
    <%= link_to "Login", new_user_session_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
    <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
    </li>
  </ul>
<% end %>